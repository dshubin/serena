  <step-type name="Create Client">
    <description> Create a client.</description>
    <properties>
      <property name="name" required="true">  
        <property-ui type="textBox" label="Client name" description="Name of the client you wish to create."/>
      </property>      
      <property name="admin">  
        <property-ui type="checkBox" label="Admin" description="Check to make client admin."/>
      </property>      
    </properties>
    <post-processing><![CDATA[
        if (properties.get("exitCode") != 0) {
            properties.put("Status", "Failure");
        }
        else {
            properties.put("Status", "Success");
        }
     ]]></post-processing>

    <command program="${GROOVY_HOME}/bin/groovy">
      <arg file="createClient.groovy"/>
      <arg file="${PLUGIN_INPUT_PROPS}"/>
      <arg file="${PLUGIN_OUTPUT_PROPS}"/>
    </command>
    
  </step-type>
